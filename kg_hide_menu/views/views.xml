<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="kg_hide_menu.list">
      <field name="name">kg_hide_menu list</field>
      <field name="model">kg_hide_menu.kg_hide_menu</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="kg_hide_menu.action_window">
      <field name="name">kg_hide_menu window</field>
      <field name="res_model">kg_hide_menu.kg_hide_menu</field>
      <field name="view_mode">tree,form</field>
    </record>

