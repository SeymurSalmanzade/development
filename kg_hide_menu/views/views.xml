    <menuitem name="kg_hide_menu" id="kg_hide_menu.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu 1" id="kg_hide_menu.menu_1" parent="kg_hide_menu.menu_root"/>
    <menuitem name="Menu 2" id="kg_hide_menu.menu_2" parent="kg_hide_menu.menu_root"/>
    <!-- actions -->
    <menuitem name="List" id="kg_hide_menu.menu_1_list" parent="kg_hide_menu.menu_1"
