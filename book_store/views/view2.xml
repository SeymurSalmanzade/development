<odoo>
  <data>
    <!-- explicit list view definition -->      
    <record model="ir.ui.view" id="book_lists_list_view">
      <field name="name">book_lists_list_view</field>
      <field name="model">book_lists</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>


    <record model="ir.ui.view" id="book_lists_form_view">
      <field name="name">book_lists_form_view</field>
      <field name="model">book_lists</field>
      <field name="arch" type="xml">
        <form>
            <group>
              <field name="name"/>
            </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="book_lists_action_window">
      <field name="name">book_lists_window</field>
      <field name="res_model">book_lists</field>
      <field name="view_mode">tree,form</field>
    </record>
      
   <!-- Top menu item -->
    <menuitem name="M&amp;B Store" id="book_store.menu_root"/>
    <!-- menu categories -->
        <menuitem name="Menu" id="book_store.menu" parent="book_store.menu_root"/>
    <!-- actions -->
    <menuitem name="Book List" id="book_store.book_list" parent="book_store.menu"
              action="book_lists_action_window"/>

  </data>
</odoo>
