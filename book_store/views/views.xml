<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="book_store.list_view">
      <field name="name">book_store_list_view</field>
      <field name="model">book_store.book_store</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="genre"/>
          <field name="author"/>
          <field name="value"/>
          <field name="currency_id" column_invisible="True"/>
        </tree>
      </field>
    </record>
      
    <record model="ir.ui.view" id="book_store.form_view">
      <field name="name">book_store_form_view</field>
      <field name="model">book_store.book_store</field>
      <field name="arch" type="xml">
        <form>
            <group>
              <field name="name"/>
              <field name="genre"/>
              <field name="author"/>
              <field name="value"/>
              <field name="currency_id"/>
            </group>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="book_store.action_window">
      <field name="name">book_store_window</field>
      <field name="res_model">book_store.book_store</field>
      <field name="view_mode">tree,form</field>
    </record>

   <!-- Top menu item -->
    <menuitem name="book_store" id="book_store.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu 1" id="book_store.menu_1" parent="book_store.menu_root"/>
    <menuitem name="Menu 2" id="book_store.menu_2" parent="book_store.menu_root"/>
    <!-- actions -->
    <menuitem name="List" id="book_store.menu_1_list" parent="book_store.menu_1"
              action="book_store.action_window"/>
  </data>
</odoo>
