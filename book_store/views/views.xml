<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="book_store.list_view">
      <field name="name">book_store_list_view</field>
      <field name="model">book_store.book_store</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="genre"/>
          <field name="author"/>
          <field name="release_date"/>
          <field name="value"/>
          <field name="currency_id" optional="hide" widget="many2one"/>
        </tree>
      </field>
    </record>
      
    <record model="ir.ui.view" id="book_store.form_view">
      <field name="name">book_store_form_view</field>
      <field name="model">book_store.book_store</field>
      <field name="arch" type="xml">
        <form>
            <group>
              <field name="name" help="Write a book name" required="1"/>
              <field name="is_new" help="Click or not if it is true or false :)"/>
              <field name="genre" required="1" help="Select the genre of your book" 
                     widget="selection" placeholder="Selcet any of the option"/>
              <field name="author"/>
              <field name="release_date" placeholder="fields.Date.today"/>
              <field name="premiere_night" string="Premiere Night" readonly="1"/>
              <field name="value" required="1"/>
              <field name="currency_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
              <field name="description"/>
            </group>
        </form>
      </field>
    </record>
      

    <record model="ir.ui.view" id="res_currency_inherit_form_view">
      <field name="name">res_currency_inherit_form_view</field>
      <field name="model">res.currency</field>
      <field name="inherit_id" ref="base.view_currency_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='decimal_places']" position="after">
          <field name="book_store_id" invisible="name != 'AZN'"/>
        </xpath>
      </field>
    </record>

      
    <record model="ir.ui.view" id="book_lists_list_view">
      <field name="name">book_lists_list_view</field>
      <field name="model">book_lists</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="book_lists_form_view">
      <field name="name">book_lists_form_view</field>
      <field name="model">book_lists</field>
      <field name="arch" type="xml">
        <form>
            <group>
              <field name="name"/>
            </group>
        </form>
      </field>
    </record>
      
    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="book_store.action_window">
      <field name="name">Movie List</field>
      <field name="res_model">book_store.book_store</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="res_currency_action_window">
      <field name="name">res_currency_inherit_form_view_window</field>
      <field name="res_model">res.currency</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window" id="book_lists_action_window">
      <field name="name">book_lists_window</field>
      <field name="res_model">book_lists</field>
      <field name="view_mode">tree,form</field>
    </record>
      
   <!-- Top menu item -->
    <menuitem name="M&amp;B Store" id="book_store.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu" id="book_store.menu" parent="book_store.menu_root"/>
    <menuitem name="Currencies" id="book_store.currency" parent="book_store.menu_root" action="res_currency_action_window"/>
    <!-- actions -->
    <menuitem name="Book List" id="book_store.book_list" parent="book_store.menu"
              action="book_store.action_window"/>
        
  </data>
</odoo>
