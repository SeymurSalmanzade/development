<odoo>
  <data>
    <!-- book_list_list_view -->
    <record model="ir.ui.view" id="book_store.list_view">
      <field name="name">book_store_list_view</field>
      <field name="model">book_store.book_store</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="genres" widget="many2many_tags" options="{'color_field': 'color'}"/>
          <!-- <field name="genre"/> -->
          <field name="author"/>
          <field name="release_date"/>
          <field name="value"/>
          <field name="currency_id" optional="hide" widget="badge"/>
        </tree>
      </field>
    </record>

    <!-- book_list_form_view -->
    <record model="ir.ui.view" id="book_store.form_view">
      <field name="name">book_store_form_view</field>
      <field name="model">book_store.book_store</field>
      <field name="arch" type="xml">
        <form>
            <group>
              <field name="name" help="Write a book name" required="1"/>
              <field name="is_new" widget="boolean_toggle" help="Click or not if it is new or not :)"/>
              <field name="genres" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True,
                          'color_field': 'color'}"/>
              <!-- <field name="genre" required="1" help="Select the genre of your book" 
                     widget="selection" placeholder="Selcet any of the option"/> -->
              <field name="author"/>
              <field name="release_date" placeholder="fields.Date.today"/>
              <field name="premiere_night" string="Premiere Night" readonly="1"/>
              <field name="value" required="1"/>
              <field name="currency_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
              <field name="description" widget="char_emojis"/>
            </group>
        </form>
      </field>
    </record>
      
    <!-- res_currency_inherit_form_view -->
    <record model="ir.ui.view" id="res_currency_inherit_form_view">
      <field name="name">res_currency_inherit_form_view</field>
      <field name="model">res.currency</field>
      <field name="inherit_id" ref="base.view_currency_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='decimal_places']" position="after">
          <field name="book_lists_id" invisible="name != 'AZN'"/>
        </xpath>
        <xpath expr="//field[@name='book_lists_id']" position="after">
          <field name="movie_lists_id"/>
        </xpath>
      </field>
    </record>

    <!-- movie_list_list_view -->
    <record model="ir.ui.view" id="movie_list_list_view">
      <field name="name">movie_list_list_view</field>
      <field name="model">movie_list</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="categories" widget="many2many_tags" options="{'color_field': 'color'}"/>
          <!-- <field name="category"/> -->
          <field name="author"/>
          <field name="release_date"/>
          <field name="value"/>
          <field name="currency_id" optional="hide" widget="badge"/>
        </tree>
      </field>
    </record>

    <!-- movie_list_form_view -->
    <record model="ir.ui.view" id="movie_list_form_view">
      <field name="name">movie_list_form_view</field>
      <field name="model">movie_list</field>
      <field name="arch" type="xml">
        <form>
            <field name="image" widget="image" class="oe_avatar"/>
            <div>
                <h1>
                    <field name="quality" widget="priority"/>
                </h1>
            </div>
            <group>
              <field name="name" help="Write a movie name" required="1"/>
              <field name="isnew" widget="radio" help="Click or not if it is new or not :)"/>
              <field name="categories" widget="many2many_tags" options="{'no_create': True, 'no_create_edit': True,
                          'color_field': 'color'}"/>
              <!-- <field name="category" required="1" help="Select at least one category of your movie" 
                     widget="selection" placeholder="Selcet any of the option"/> -->
              <field name="author"/>
              <field name="release_date" placeholder="fields.Date.today"/>
              <field name="premiere_night" string="Premiere Night" readonly="1"/>
              <field name="value" required="1"/>
              <field name="currency_id" options="{'no_create': True, 'no_create_edit': True, 'no_open': True}"/>
              <field name="description" options="{'sandboxedPreview': True}"/>          
            </group>
        </form>
      </field>
    </record>

    <!-- genre_list_list_view -->
    <record model="ir.ui.view" id="genre_list_list_view">
      <field name="name">genre_list_list_view</field>
      <field name="model">genre_list</field>
      <field name="arch" type="xml">
        <tree editable="bottom">
          <field name="name"/>
          <field name="color" widget="color_picker"/>
        </tree>
      </field>
    </record>

    <!-- genre_list_form_view -->
    <!-- <record model="ir.ui.view" id="genre_list_form_view">
      <field name="name">genre_list_form_view</field>
      <field name="model">genre_list</field>
      <field name="arch" type="xml">
        <form>
            <group>
              <field name="name"/> 
              <field name="color" widget="color_picker"/>
            </group>
        </form>
      </field>
    </record> -->

    <!-- category_list_list_view -->
    <record model="ir.ui.view" id="category_list_list_view">
      <field name="name">category_list_list_view</field>
      <field name="model">category_list</field>
      <field name="arch" type="xml">
        <tree editable="bottom" sample="1">
          <field name="name"/>
          <field name="color" widget="color_picker"/>
        </tree>
      </field>
    </record>

