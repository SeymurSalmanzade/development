      <field name="arch" type="xml">
        <form>
            <group>
              <field name="name"/>
              <field name="color" widget="color_picker"/>
            </group>
        </form>
      </field>
    </record> -->

      
    <!-- book_store.action_window -->
    <record model="ir.actions.act_window" id="book_store.action_window">
      <field name="name">Book List</field>
      <field name="res_model">book_store.book_store</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- res_currency_action_window -->
    <record model="ir.actions.act_window" id="res_currency_action_window">
      <field name="name">res_currency_inherit_form_view_window</field>
      <field name="res_model">res.currency</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- movie_list_action_window -->
    <record model="ir.actions.act_window" id="movie_list_action_window">
      <field name="name">Movie List</field>
      <field name="res_model">movie_list</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- genre_list_action_window -->
    <record model="ir.actions.act_window" id="genre_list_action_window">
      <field name="name">Genre List</field>
      <field name="res_model">genre_list</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- category_list_action_window -->
    <record model="ir.actions.act_window" id="category_list_action_window">
      <field name="name">Category List</field>
      <field name="res_model">category_list</field>
      <field name="view_mode">tree,form</field>
    </record>

   <!-- Top menu item -->
    <menuitem name="M&amp;B Store" id="book_store.menu_root"/>
    <!-- menu categories -->
    <menuitem name="Menu" id="book_store.menu" parent="book_store.menu_root"/>
    <menuitem name="Currencies" id="book_store.currency" parent="book_store.menu_root" action="res_currency_action_window"/>  
    <!-- actions -->
    <menuitem name="Book List" id="book_store.book_list" parent="book_store.menu"
              action="book_store.action_window"/>
    <menuitem name="Movie List" id="book_store.movie_list" parent="book_store.menu"
              action="movie_list_action_window"/>
    <menuitem name="Genre List" id="book_store.genre_list" parent="book_store.menu"
              action="genre_list_action_window"/>
    <menuitem name="Category List" id="book_store.category_list" parent="book_store.menu"
              action="category_list_action_window"/>
      
  </data>
</odoo>
